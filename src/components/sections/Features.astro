---
import Stack from "../icons/Stack.astro";
import FilterIcon from "../icons/FilterIcon.astro";
import RocketIcon from "../icons/RocketIcon.astro";
import SparklesIcon from "../icons/SparklesIcon.astro";
import type { Translation } from "../../i18n";

interface Props {
  t: Translation["features"];
}

const { t } = Astro.props as Props;
const icons = [Stack, RocketIcon, FilterIcon, SparklesIcon];
---

<section id="features" class="scroll-mt-24 w-full">
  <div class="mx-auto max-w-2xl text-center">
    <h2 class="text-4xl font-bold tracking-tight text-white sm:text-5xl">
      {t.title}
    </h2>
    <p class="mt-6 text-lg leading-8 text-white/70">{t.description}</p>
  </div>

  <div class="mx-auto max-w-[1728px] px-[3%] lg:px-[5%]">
    <div
      class="mt-20 grid grid-cols-1 gap-y-12 md:grid-cols-2 md:gap-x-8 lg:grid-cols-4 lg:gap-x-0"
    >
      {
        t.features.map((feature, index) => {
          const IconComponent = icons[index % icons.length];
          return (
            <div class="relative flex justify-center">
              {index > 0 && (
                <div class="absolute left-0 top-1/2 hidden h-24 w-[1px] -translate-y-1/2 bg-white/10 lg:block" />
              )}
              <div class="flex flex-col items-center gap-4 px-4 text-center">
                <IconComponent size={30} stroke="#07D9C4" opacity={1} />
                <h3 class="text-xl font-semibold text-white">
                  {feature.title}
                </h3>
                <p class="max-w-[280px] text-base leading-7 text-white/70">
                  {feature.description}
                </p>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
