---

<nav class="nav-bg sticky top-0 z-50">
    <div class="container mx-auto px-6 py-3 flex justify-between items-center">
        <a href="#" class="flex items-center space-x-3">
            <svg
                class="vallax-logo-svg h-10 w-10"
                viewBox="0 0 100 100"
                xmlns="http://www.w3.org/2000/svg"
            >
                <circle
                    cx="50"
                    cy="50"
                    r="45"
                    stroke-width="8"
                    class="logo-circle-stroke"></circle>
                <path
                    d="M25 30 L50 75 L75 30 L65 30 L50 55 L35 30 Z"
                    class="logo-v-fill"></path>
            </svg>
            <span class="font-display text-2xl md:text-3xl brand-text-heading"
                >VALLAX</span
            >
        </a>

        <div class="hidden md:flex items-center space-x-6 md:space-x-8">
            <a href="#contact" class="nav-link">
                <span class="nav-link-text-color">Contacto</span>
            </a>
            <a href="/docs" class="nav-link">
                <span class="nav-link-text-color">Documentación</span>
            </a>
        </div>

        <div class="md:hidden">
            <button
                id="mobile-menu-button"
                type="button"
                class="text-gray-500 hover:text-white focus:outline-none focus:text-white"
                aria-label="Toggle menu"
                aria-expanded="false"
            >
                <svg
                    id="hamburger-icon"
                    class="h-6 w-6 fill-current"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                >
                    <path
                        fill-rule="evenodd"
                        clip-rule="evenodd"
                        d="M4 6h16v2H4V6zm0 5h16v2H4v-2zm0 5h16v2H4v-2z"></path>
                </svg>
                <svg
                    id="close-icon"
                    class="h-6 w-6 fill-current hidden"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                >
                    <path
                        fill-rule="evenodd"
                        clip-rule="evenodd"
                        d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.828 4.828 4.829-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
                    ></path>
                </svg>
            </button>
        </div>
    </div>

    <div id="mobile-menu" class="md:hidden hidden">
        <a
            href="#contact"
            class="block py-2 px-6 text-sm hover:bg-gray-700 nav-link"
            ><span class="nav-link-text-color">Contacto</span></a
        >
        <a
            href="/docs"
            class="block py-2 px-6 text-sm hover:bg-gray-700 nav-link"
            ><span class="nav-link-text-color">Documentación</span></a
        >
    </div>
</nav>

<script>
    const menuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const hamburgerIcon = document.getElementById("hamburger-icon");
    const closeIcon = document.getElementById("close-icon");

    menuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
        hamburgerIcon.classList.toggle("hidden");
        closeIcon.classList.toggle("hidden");
        const isExpanded = menuButton.getAttribute("aria-expanded") === "true";
        menuButton.setAttribute("aria-expanded", !isExpanded);
    });
</script>
