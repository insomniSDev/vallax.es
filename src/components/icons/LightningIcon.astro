---
interface Props {
  size?: number;
  stroke?: string;
  strokeWidth?: number;
  opacity?: number;
  class?: string;
}

const {
  size = 24,
  stroke = "currentColor",
  strokeWidth = 2,
  opacity = 1,
  class: className = "",
} = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class={className}
  stroke={stroke}
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  xmlns="http://www.w3.org/2000/svg"
>
